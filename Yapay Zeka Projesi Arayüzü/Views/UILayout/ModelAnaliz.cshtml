@model List<Yapay_Zeka_Projesi_Arayüzü.Models.Analizler>

@{ 
    int countmodel = 0;
} 


@foreach (var item in Model)
{
    countmodel++;
    <div class="portfolio-modal modal fade" id="@(("portfolioModal" + item.Ornekid).ToString())  " tabindex="-1" role="dialog" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="close-modal" data-bs-dismiss="modal"><img src="~/Templates/agency/assets/img/Close.png" alt="Close modal" /></div>
                <div class="container">
                    <div class="row justify-content-center">
                        <div class="col-lg-8">
                            <div class="modal-body">
                                <!-- Project details-->
                                <h2 class="text-uppercase">@item.Ad</h2>

                                <img class="img-fluid d-block mx-auto" src="@item.ResimUrl" alt="..." />
                                <table class="table table-bordered table-hover">

                                    <tr>
                                        <th>Yemek Adı</th>
                                        <th>İçindekiler</th>
                                        <th>Miktar</th>
                                        <th>Protein(g)</th>
                                        <th>Karbonhidrat(g)</th>
                                        <th>Kalori</th>
                                    </tr>
                                    <tr>
                                        <td>@item.Ad</td>
                                        <td>@item.ModelIcindekiler</td>
                                        <td>@item.ModelMiktar +gr</td>
                                        <td>@item.ModelProtein +gr</td>
                                        <td>@item.ModelKarbonhidrat +gr</td>
                                        <td>@item.ModelKalori</td>
                                    </tr>


                                </table>

                                @*<button class="btn btn-primary btn-xl text-uppercase" data-bs-dismiss="modal" type="button">
                                        <i class="fas fa-times me-1"></i>
                                        Close Project
                                    </button>*@
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

